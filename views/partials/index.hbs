{{!-- section --}}
    <section class="section my-4">
        <div class="container text-center">
            <div class="title py-5">
                <h1><a href="/">Image Annotation and Measurements</a></h1>
                <p class="subtitle">Upload Single or Multiple Images to the Field Provided Below</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-4">
                    <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
                        <div class="row">
                            <div class="col-20">
                                <input type="file" class="form-control" name="images" id="formFile" multiple>
                            </div>

                            <div>
                                <br>
                            </div>

                            <div class="col-13">
                                <input style="padding-right: 10px;" type="submit" class="btn btn-warning" value="Upload Images">
                            
                                <button style="padding-left: 10px;" type="submit" class="btn btn-warning" value="Images">Display Images</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <section class="mt-5">        
                <div class="row">
                    {{#each images}} 
                        {{#each this}}
                            {{#if imageBase64 }}
                                {{!-- bootstrap cads --}}
                                    <div class="col-4">
                                        <div class="card shadow" style="width: 18rem;">
                                            <a href="/newimage/{{this._id}}">
                                                <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                            </a>
                                        </div>
                                    </div>
                                {{!-- /bootstrap cads --}}
                            {{/if}}
                        {{/each}}
                    {{/each}}        
                </div>        
            </section>
    </section>


{{!-- /section --}}

